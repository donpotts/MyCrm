@page
@using MyCrm.Localization
@using MyCrm.Web.Pages.Rewards
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model CreateModalModel
@inject IStringLocalizer<MyCrmResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Reward" asp-page="/Rewards/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewReward"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
