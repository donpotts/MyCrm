@page
@using MyCrm.Localization
@using MyCrm.Permissions
@using MyCrm.Web.Pages.ServiceCategories
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@model IndexModel
@inject IStringLocalizer<MyCrmResource> L
@inject IAuthorizationService AuthorizationService
@section scripts
{
    <abp-script src="/Pages/ServiceCategories/Index.js" />
}
<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Menu:ServiceCategories"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                 @if (await AuthorizationService.IsGrantedAsync(MyCrmPermissions.ServiceCategories.Create))
                {
                    <abp-button id="NewServiceCategoryButton"
                                text="@L["NewServiceCategory"].Value"
                                icon="plus"
                                button-type="Primary"/>
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="ServiceCategoriesTable"></abp-table>
    </abp-card-body>
</abp-card>
